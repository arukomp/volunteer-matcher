extends ../layout

block content
  .container
    h1 Add Your Project
    p.lead Say something worthwhile here.
    br
    form(role='form', action="/projects",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="title", placeholder='Enter your project name.')
      .form-group
        input.form-control(type='text', name="description", placeholder='Please decribe your project here.')
      .form-group
        input.form-control(type='text', name="startingDate", placeholder="dd/mm/yyyy")
      .form-group
        input.form-control(type='text', name="endDate", placeholder="dd/mm/yyyy")

      button.btn.btn-default(type='submit') Add Project
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
